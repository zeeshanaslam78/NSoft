<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/sli_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:elevation="2dp"
        android:background="@drawable/box_round_list_item"
        tools:ignore="MissingPrefix">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sl_img_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/image_desc"
                android:src="@drawable/ic_content_paste"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/sl_txt_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dummy_name"
                        android:textStyle="bold"
                        android:textSize="?attr/font_medium"
                        fontPath="fonts/Roboto-Slab-Bold.ttf"
                        android:textColor="@android:color/black"/>

                    <ImageView
                        android:id="@+id/sl_img_fav"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_star_border"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sl_txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="5dp"
                        android:text="@string/dummy_email"
                        android:textSize="?attr/font_small"
                        fontPath="fonts/PT-Sans-Regular.ttf"
                        android:textColor="@color/colorStaffListItemGrey"/>

                    <TextView
                        android:id="@+id/sl_txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_location_on"
                        android:drawableStart="@drawable/ic_location_on"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/dummy_location"
                        android:textSize="?attr/font_small"
                        fontPath="fonts/PT-Sans-Regular.ttf"
                        android:textColor="@color/colorStaffListItemGrey"/>

                    <TextView
                        android:id="@+id/sl_txt_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_calendar_text"
                        android:drawableStart="@drawable/ic_calendar_text"
                        android:drawablePadding="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/dummy_dob"
                        android:textSize="?attr/font_small"
                        fontPath="fonts/PT-Sans-Regular.ttf"
                        android:textColor="@color/colorStaffListItemGrey"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sl_txt_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_job"
                android:textSize="?attr/font_small"
                fontPath="fonts/PT-Sans-Regular.ttf"
                android:textColor="@color/colorStaffListItemGrey"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sl_img_payment"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/image_desc"
                    android:src="@drawable/paypal"/>

                <TextView
                    android:id="@+id/sl_txt_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="@string/dummy_salary"
                    android:textSize="?attr/font_small"
                    fontPath="fonts/PT-Sans-Regular.ttf"
                    android:textColor="@color/colorStaffListItemRed"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>