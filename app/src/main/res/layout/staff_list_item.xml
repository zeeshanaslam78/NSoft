<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="14dp"
    android:paddingStart="14dp"
    android:paddingRight="12dp"
    android:paddingEnd="12dp"
    android:layout_margin="5dp"
    android:elevation="2dp"
    android:background="@drawable/box_round_list_item"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sl_img_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/ic_content_paste"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/sl_txt_name"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Craig Welch"
                    android:textStyle="bold"
                    fontPath="fonts/Roboto-Slab-Bold.ttf"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:id="@+id/sl_img_fav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star_border"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sl_txt_email"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="5dp"
                    android:text="cwelch0@wsj.com"
                    fontPath="fonts/PT-Sans-Regular.ttf"
                    android:textColor="@color/colorStaffListItemGrey"/>

                <TextView
                    android:id="@+id/sl_txt_location"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location_on"
                    android:drawableStart="@drawable/ic_location_on"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Liminka, FI"
                    fontPath="fonts/PT-Sans-Regular.ttf"
                    android:textColor="@color/colorStaffListItemGrey"/>

                <TextView
                    android:id="@+id/sl_txt_dob"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_calendar_text"
                    android:drawableStart="@drawable/ic_calendar_text"
                    android:drawablePadding="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="28 Dec 1955"
                    fontPath="fonts/PT-Sans-Regular.ttf"
                    android:textColor="@color/colorStaffListItemGrey"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sl_txt_job"
            style="@android:style/TextAppearance.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Account Executive (Photolist)"
            fontPath="fonts/PT-Sans-Regular.ttf"
            android:textColor="@color/colorStaffListItemGrey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sl_img_payment"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:contentDescription="@string/image_desc"
                android:src="@drawable/paypal"/>

            <TextView
                android:id="@+id/sl_txt_salary"
                style="@android:style/TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="-91.38 EUR"
                fontPath="fonts/PT-Sans-Regular.ttf"
                android:textColor="@color/colorStaffListItemRed"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>